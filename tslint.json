{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "ban-types": false,
        "member-access": true,
        "quotemark": false, // 必须使用单引号，jsx中必须使用双引号
        "semicolon": false,
        "no-console": false,
        "interface-name": [
            true,
            "never-prefix"
        ],
        "object-literal-sort-keys": false,
        "max-classes-per-file": false
    },
    "rulesDirectory": []
}